@using Blazored.Modal;
@using CBCanteen.Client.ComponentLibrary.Components

<div class="inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all w-28 sm:my-8 sm:align-middle sm:max-w-lg sm:w-full">
    <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
        <h3 class="text-lg leading-6 font-medium text-gray-900" id="modal-title">
            Добави Ястие
        </h3>

        <div class="mt-4">
            <div class="mb-4">
                <label for="name" class="block text-gray-700 font-bold mb-2">Име:</label>
                <input type="text" id="name" name="name" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="Въведете име за ястието" >
            </div>
            <div class="mb-4">
                <label for="weight" class="block text-gray-700 font-bold mb-2">Грамаж:</label>
                <input type="number" id="weight" name="weight" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="Въведете грамаж за ястието">
            </div>
            <div class="mb-4">
                <label for="unitPrice" class="block text-gray-700 font-bold mb-2">Цена:</label>
                <input type="number" id="unitPrice" name="weight" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="Въведете цена за ястието">
            </div>
            <div class="mb-4">
                <label for="category" class="block text-gray-700 font-bold mb-2">Категория:</label>
                <select id="category" name="category" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
                    <option value="apetizer">Предястие</option>
                    <option value="mainDish">Основно</option>
                    <option value="dessert">Десерт</option>
                </select>
            </div>
        </div>
    </div>
    <div class="bg-gray-50 py-3 px-6 flex flex-row-reverse">
        <GreenButton Text="Добави" StyleClass="ml-2 py-1 px-3" OnClickCallback="CreateMeal" />
        <GrayButton Text="Откажи" StyleClass="py-1 px-3" OnClickCallback="CloseModal" />
    </div>
</div>

@code {
    [CascadingParameter]
    private BlazoredModalInstance BlazoredModal { get; set; } = default!;

    /// <summary>
    /// Function that creates a new meal
    /// </summary>
    private async void CreateMeal()
    {
        await BlazoredModal.CloseAsync();
    }

    /// <summary>
    /// Function that closes the modal window
    /// </summary>
    private async void CloseModal()
    {
        await BlazoredModal.CloseAsync();
    }
}